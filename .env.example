ADULT_KEYWORDS=xxx,porn,adult,sexy,hot,erotic,nude,+18,adulto,erotico,sexual,porno,caliente,desnudo,sensual

# Filtro de contenido pol√≠tico
FILTER_POLITICAL_CONTENT=false
